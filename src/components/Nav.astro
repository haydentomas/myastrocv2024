---
import ThemeToggleButton from './ThemeToggleButton.svelte';
import HeaderLink from './HeaderLink.astro';
const { current = '' } = Astro.props;
---

<style>
  nav {
    align-items: center;
    display: flex;
    flex: 1;
    font-family: var(--font-family-sans);
    font-weight: 700;
    justify-content: flex-end;
    text-transform: uppercase;
  }

  a {
    color: inherit;
    text-decoration: none;
    padding: 10px 5px;
    display: block;
    position: relative;
    margin-left:10px;

 
    text-align: center;

    
    
  }

  a:not(.selected) {
    opacity: 0.8;
  }

 

  a:hover::before,
  .selected::before {
    transform: scaleX(1);
  }

  .selected::before {
    background: var(--primary-color);
  }

  .theme-toggle-container {
    width: 75px;
  }

  @media (max-width: 768px) {
    .theme-toggle-container {
    width: 75px;
    position: absolute;
    top:20px;
  }
  }

  nav a.button {
  @apply rounded-3xl text-black px-5 bg-neutral-50 hover:bg-neutral-700 hover:text-white;
font-size:1em;
}
  nav a.button::before {
  display:none !important;}

    nav a.button {
      display: none;
    }
  

</style>

<nav>
	<HeaderLink class={current === "/" ? "selected" : ""} href="/">Home</HeaderLink>
	<HeaderLink class={current === "about" ? "selected" : ""} href="/about">about</HeaderLink>
	<HeaderLink class={current === "blog" ? "selected" : ""} href="/blog">blog</HeaderLink>
	<HeaderLink class={current === "projects" ? "selected" : ""} href="/projects">My Work</HeaderLink>
	<HeaderLink class={current === "contact" ? "selected" : ""} href="/contact">contact</HeaderLink>

	<div class="theme-toggle-container">
	  <ThemeToggleButton client:load />
	</div>
  </nav>

